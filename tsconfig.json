{
	"compilerOptions": {
		"module": "ES2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "ES2015",
		"declaration": true,
		"outDir": "./dist",
		"noImplicitThis": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}